{
    "name": "{{ cookiecutter.composer_package_name }}",
    "description": "{{ cookiecutter.project_short_description }}",
    "license": [
        "MIT"
    ],
    "type": "{{ cookiecutter.project_type }}",
    "authors": [
        {
            "name": "{{ cookiecutter.full_name }}",
            "email": "{{ cookiecutter.email }}"
        }
    ],
    "require": {
        "php": "~8.4.0 || ~8.5.0"
    },
    "require-dev": {
        "shipmonk/dead-code-detector": "^0.14.1",
        "maglnet/composer-require-checker": "^4.20.0",
        "php-cs-fixer/shim": "^3.93.1",
        "phpstan/extension-installer": "^1.4.3",
        "phpstan/phpstan": "^2.1.38",
        "phpstan/phpstan-deprecation-rules": "^2.0.3",
        "phpstan/phpstan-phpunit": "^2.0.12",
        "phpstan/phpstan-strict-rules": "^2.0.8",
        "phpunit/phpunit": "^13.0.1",
        "rector/rector": "^2.3.6",
        "rector/type-perfect": "^2.1.2",
        "shipmonk/composer-dependency-analyser": "^1.8.4",
        "symfony/var-dumper": "^8.0.4"
    },
    "autoload": {
        "psr-4": {
            "{{ cookiecutter.psr4_namespace.replace('\\', '\\\\') }}\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "{{ cookiecutter.psr4_namespace.replace('\\', '\\\\') }}\\Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "analyze": "vendor/bin/phpstan analyse",
        "lint": [
            "vendor/bin/rector --dry-run",
            "vendor/bin/php-cs-fixer check --diff --verbose"
        ],
        "lint:fix": [
            "vendor/bin/rector",
            "vendor/bin/php-cs-fixer fix --diff --verbose"
        ],
        "test": "@test:all",
        "test:all": [
            "@analyze",
            "@lint",
            "@test:unit",
            "@test:dependencies"
        ],
        "test:unit": [
            "vendor/bin/phpunit --testdox"
        ],
        "test:coverage": [
            "Composer\\Config::disableProcessTimeout",
            "XDEBUG_MODE=coverage vendor/bin/phpunit --testdox --coverage-text --coverage-html=.build/coverage"
        ],
        "test:require-checker": [
            "XDEBUG_MODE=off vendor/bin/composer-require-checker check --config-file=composer-require-checker.json composer.json"
        ],
        "test:dependencies": [
            "vendor/bin/composer-dependency-analyser",
            "@test:require-checker"
        ]
    }
}
