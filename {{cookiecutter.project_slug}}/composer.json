{
    "name": "{{ cookiecutter.composer_package_name }}",
    "description": "{{ cookiecutter.project_short_description }}",
    "license": [
        "MIT"
    ],
    "type": "{{ cookiecutter.project_type }}",
    "authors": [
        {
            "name": "{{ cookiecutter.full_name }}",
            "email": "{{ cookiecutter.email }}"
        }
    ],
    "require": {
        "php": "~8.4.0 || ~8.5.0"
    },
    "require-dev": {
        "shipmonk/composer-dependency-analyser": "^1.8.4"
    },
    "autoload": {
        "psr-4": {
            "{{ cookiecutter.psr4_namespace.replace('\\', '\\\\') }}\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "{{ cookiecutter.psr4_namespace.replace('\\', '\\\\') }}\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "analyze": "tools/phpstan --ansi analyse",
        "lint": [
            "tools/.rector/vendor/bin/rector --ansi --dry-run",
            "tools/php-cs-fixer check --ansi --diff --verbose",
            "@lint:composer"
        ],
        "lint:composer": "tools/composer-normalize --ansi --dry-run",
        "lint:composer:fix": "tools/composer-normalize --ansi",
        "lint:fix": [
            "tools/.rector/vendor/bin/rector --ansi",
            "tools/php-cs-fixer fix --ansi --diff --verbose",
            "@lint:composer:fix"
        ],
        "test": "@test:all",
        "test:all": [
            "@analyze",
            "@lint",
            "@test:unit"
        ],
        "test:bc": "docker run --rm -v \"$PWD\":/app nyholm/roave-bc-check",
        "test:coverage": "XDEBUG_MODE=coverage tools/phpunit --colors=always --testdox --coverage-text --coverage-html=build/coverage",
        "test:dependencies": [
            "vendor/bin/composer-dependency-analyser --ansi",
            "@test:require-checker"
        ],
        "test:mutation": "PATH=tools:$PATH tools/infection --ansi",
        "test:require-checker": "XDEBUG_MODE=off tools/composer-require-checker check --config-file=composer-require-checker.json composer.json",
        "test:unit": "tools/phpunit --colors=always --testdox"
    }
}
