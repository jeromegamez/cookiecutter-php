{
    "name": "{{ cookiecutter.composer_package_name }}",
    "description": "{{ cookiecutter.project_short_description }}",
    "license": [
        "MIT"
    ],
    "type": "{{ cookiecutter.project_type }}",
    "authors": [
        {
            "name": "{{ cookiecutter.full_name }}",
            "email": "{{ cookiecutter.email }}"
        }
    ],
    "require": {
        "php": "~8.4.0 || ~8.5.0"
    },
    "autoload": {
        "psr-4": {
            "{{ cookiecutter.psr4_namespace.replace('\\', '\\\\') }}\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "{{ cookiecutter.psr4_namespace.replace('\\', '\\\\') }}\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "analyze": "tools/phpstan --ansi analyse",
        "clean": [
            "@clean:build-artifacts",
            "@clean:vendor"
        ],
        "clean:build-artifacts": [
            "rm -rf build && mkdir -p build"
        ],
        "clean:vendor": "rm -rf vendor",
        "dependencies:check": [
            "@clean",
            "@tools:install",
            "@dependencies:install",
            "composer outdated --locked --direct --strict --sort-by-age --ansi"
        ],
        "dependencies:install": "composer install --no-interaction --no-progress --ansi",
        "dependencies:update": [
            "composer update --no-interaction --no-progress --ansi",
            "composer bump --no-interaction --ansi"
        ],
        "lint": [
            "tools/.rector/vendor/bin/rector --ansi --dry-run",
            "tools/php-cs-fixer check --ansi --diff --verbose",
            "@lint:composer"
        ],
        "lint:composer": "tools/composer-normalize --ansi --dry-run",
        "lint:composer:fix": "tools/composer-normalize --ansi",
        "lint:fix": [
            "tools/.rector/vendor/bin/rector --ansi",
            "tools/php-cs-fixer fix --ansi --diff --verbose",
            "@lint:composer:fix"
        ],
        "setup": [
            "@clean:build-artifacts",
            "@tools:install",
            "@dependencies:install",
            "@tools:phpstan:install",
            "@tools:phpstan:update",
            "@tools:rector:install",
            "@tools:rector:update",
            "@tools:link"
        ],
        "test": "@test:all",
        "test:all": [
            "@analyze",
            "@lint",
            "@test:bc",
            "@test:unit"
        ],
        "test:bc": "docker run --rm -v \"$PWD\":/app nyholm/roave-bc-check",
        "test:coverage": "XDEBUG_MODE=coverage tools/phpunit --colors=always --testdox --coverage-text --coverage-html=build/coverage --coverage-clover=build/coverage/clover.xml",
        "test:unit": "tools/phpunit --colors=always --testdox",
        "tools:install": "tools/phive --no-progress install --trust-gpg-keys E82B2FB314E9906E,4AA394086372C20A,C00543248C87FB13,033E5F8D801A2F8D",
        "tools:link": [
            "ln -snf phpunit tools/phpunit.phar",
            "ln -snf .phpstan/vendor/bin/phpstan tools/phpstan",
            "ln -snf .rector/vendor/bin/rector tools/rector"
        ],
        "tools:phpstan:install": "composer --working-dir=tools/.phpstan install --no-interaction --no-progress --ansi",
        "tools:phpstan:update": [
            "composer --working-dir=tools/.phpstan update --no-interaction --no-progress --ansi",
            "composer --working-dir=tools/.phpstan bump --no-interaction --ansi"
        ],
        "tools:rector:install": "composer --working-dir=tools/.rector install --no-interaction --no-progress --ansi",
        "tools:rector:update": [
            "composer --working-dir=tools/.rector update --no-interaction --no-progress --ansi",
            "composer --working-dir=tools/.rector bump --no-interaction --ansi"
        ],
        "tools:update": [
            "tools/phive --no-progress self-update",
            "tools/phive --no-progress update",
            "@tools:phpstan:update",
            "@tools:rector:update",
            "@tools:link"
        ]
    }
}
